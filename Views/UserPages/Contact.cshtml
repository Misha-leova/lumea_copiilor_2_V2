                    <div class="col-md-4 mb-4">
                        <div class="store-card p-3 border rounded">
                            <h4>Cluj-Napoca</h4>
                            <p><i class="fas fa-map-marker-alt me-2"></i> Bulevardul Eroilor, Nr. 45</p>
                            <p><i class="fas fa-phone-alt me-2"></i> 0720 789 012</p>
                            <p><i class="fas fa-clock me-2"></i> Luni-Vineri: 9:00-18:00</p>
                            <p><i class="fas fa-clock me-2"></i> Sâmbătă: 10:00-14:00</p>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <div class="store-card p-3 border rounded">
                            <h4>Timișoara</h4>
                            <p><i class="fas fa-map-marker-alt me-2"></i> Strada Copiilor, Nr. 78</p>
                            <p><i class="fas fa-phone-alt me-2"></i> 0720 345 678</p>
                            <p><i class="fas fa-clock me-2"></i> Luni-Vineri: 9:00-18:00</p>
                            <p><i class="fas fa-clock me-2"></i> Sâmbătă: 10:00-14:00</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Social Media -->
    <div class="row mt-4 mb-5">
        <div class="col-12">
            <div class="category-card bg-accent text-dark p-4 text-center">
                <h3 class="mb-3">Urmărește-ne pe Rețelele Sociale</h3>
                <p class="lead mb-4">Fii la curent cu cele mai noi jucării, concursuri și evenimente!</p>
                <div class="social-links">
                    <a href="#" class="btn btn-outline-dark btn-lg mx-2 mb-3"><i class="fab fa-facebook-f me-2"></i>Facebook</a>
                    <a href="#" class="btn btn-outline-dark btn-lg mx-2 mb-3"><i class="fab fa-instagram me-2"></i>Instagram</a>
                    <a href="#" class="btn btn-outline-dark btn-lg mx-2 mb-3"><i class="fab fa-youtube me-2"></i>YouTube</a>
                    <a href="#" class="btn btn-outline-dark btn-lg mx-2 mb-3"><i class="fab fa-tiktok me-2"></i>TikTok</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Newsletter -->
    <div class="mt-5 pt-3 text-center">
        <h4 class="mb-3">Abonează-te la newsletter</h4>
        <p>Primește cele mai recente știri, oferte exclusive și invitații la evenimente speciale.</p>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <input type="email" class="form-control" placeholder="Adresa ta de email">
                    <button class="btn btn-toy" type="button">Abonează-te</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>// Validare formular
        document.addEventListener('DOMContentLoaded', function() {
            const contactForm = document.getElementById('contactForm');
            if (contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault();

                    // Simulare trimitere formular
                    const submitBtn = this.querySelector('button[type="submit"]');
                    const originalText = submitBtn.innerHTML;

                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Se trimite...';

                    setTimeout(function() {
                        submitBtn.innerHTML = '<i class="fas fa-check me-2"></i> Mesaj trimis cu succes!';

                        setTimeout(function() {
                            submitBtn.disabled = false;
                            submitBtn.innerHTML = originalText;
                            contactForm.reset();
                        }, 3000);
                    }, 2000);
                });
            }

            // Animație pentru carduri
            const cards = document.querySelectorAll('.category-card, .store-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.transition = 'transform 0.3s ease, box-shadow 0.3s ease';
                    this.style.boxShadow = '0 10px 20px rgba(0,0,0,0.1)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = '';
                });
            });
        });</script>
}